        }

        /* Esconda o checkbox */
        input[type="checkbox"] {
            display: none;
        }

        /* Mostrar o conteúdo quando o checkbox está marcado */
        input[type="checkbox"]:checked+.accordion-header+.accordion-content-2 {
            max-height: 500px;
            /* Ajuste conforme necessário */
            opacity: 1;
            padding: 10px;
        }
    </style>
